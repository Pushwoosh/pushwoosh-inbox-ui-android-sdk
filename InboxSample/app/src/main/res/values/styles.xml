<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.StyleInbox" parent="AppTheme">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/samplePrimary</item>
		<item name="colorPrimaryDark">@color/samplePrimaryDark</item>

		<item name="inboxAccentColor">@color/sampleAccentColor</item>

		<item name="inboxBackgroundColor">@color/sampleBackgroundColor</item>
		<item name="inboxHighlightColor">@color/sampleHighlightColor</item>

		<item name="inboxImageTypeColor">@color/sampleImageTypeColor</item>
		<item name="inboxReadImageTypeColor">@color/sampleReadImageTypeColor</item>

		<item name="inboxTitleColor">@color/sampleTitleColor</item>
		<item name="inboxReadTitleColor">@color/sampleReadTitleColor</item>

		<item name="inboxDescriptionColor">@color/sampleDescriptionColor</item>
		<item name="inboxReadDescriptionColor">@color/sampleReadDescriptionColor</item>

		<item name="inboxDateColor">@color/sampleDateColor</item>
		<item name="inboxReadDateColor">@color/sampleReadDateColor</item>

		<item name="inboxDividerColor">@color/sampleDividerColor</item>
		<item name="inboxDefaultIcon">@drawable/ic_account_circle_black_24dp</item>
	</style>

</resources>
